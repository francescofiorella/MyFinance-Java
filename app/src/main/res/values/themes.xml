<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorAccent">@color/accent</item>

        <!--Custom widgets theme. -->
        <item name="textInputStyle">@style/Widget.MyFinance.TextInputLayout.OutlinedBox</item>
    </style>

    <!--Toolbar theme. -->
    <style name="ThemeOverlay.MyFinance.Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="TextAppearance.MyFinance.Toolbar.Title" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!--BottomNavigationView theme. -->
    <style name="Widget.MyFinance.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!--Material Fields theme. -->
    <style name="Widget.MyFinance.TextInputLayout.OutlinedBox"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NoWaste.TextInputLayout.OutlinedBox</item>
    </style>
    <style name="Widget.NoWaste.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NoWaste.TextInputLayout.OutlinedBox</item>
    </style>
    <style name="ThemeOverlay.NoWaste.TextInputLayout.OutlinedBox" parent="">
        <item name="colorPrimary">@color/accent</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox</item>
    </style>

</resources>